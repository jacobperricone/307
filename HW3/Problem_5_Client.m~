clear all
close all



%% Proble 5
a = [0, 1, 0; 0 0, 1];
b = [0,-1, 0; 0, 0,-1];

f = @(x,x0, a, b)(sum(log(1 + exp(-a'*x - x0))) + sum(log(1 + exp(b'*x + x0))));
df = @(x,x0, a, b) ( [sum((-a(1,:)'.*exp(-a'*x - x0)) ./ (1 + exp(-a'*x - x0))) ...
    + sum((b(1,:)'.*exp(b'*x + x0)) ./ (1 + exp(b'*x + x0))); ... 
   sum((-a(2,:)'.*exp(-a'*x - x0)) ./ (1 + exp(-a'*x - x0))) ...
    + sum((b(2,:)'.*exp(b'*x + x0)) ./ (1 + exp(b'*x + x0))); ... 
    sum((-exp(-a'*x - x0)) ./ (1 + exp(-a'*x - x0))) ...
    + sum((exp(b'*x + x0)) ./ (1 + exp(b'*x + x0)))] )




x_initial = [0;0]
x0_initial= 0;
ALPHA = .005
MAX_ITER = 10000;
FUNC_TOL = .0000001;


%% Call SDM
[x, x0] = SDM(f, df, x_initial, x0_initial, a, b,ALPHA, MAX_ITER, FUNC_TOL)
%% Call ASDM
[x, x0] = ASDM(f, df, x_initial, x0_initial, a, b,1/ALPHA, MAX_ITER, FUNC_TOL)